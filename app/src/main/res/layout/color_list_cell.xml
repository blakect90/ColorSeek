<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_cell_Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_cell_Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_cell_Red"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cell_Red"
        app:layout_constraintTop_toTopOf="@+id/tv_v_cell_Red" />

    <TextView
        android:id="@+id/tv_v_cell_Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_cell_Green"
        app:layout_constraintStart_toEndOf="@+id/tv_v_cell_Green"
        app:layout_constraintTop_toTopOf="@+id/tv_v_cell_Green" />

    <TextView
        android:id="@+id/tv_v_cell_Hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_cell_Red" />
</androidx.constraintlayout.widget.ConstraintLayout>